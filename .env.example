# Chat App Environment Variables
# Copy this file to .env and update with your actual values

# ===========================================
# CLOUDINARY CONFIGURATION (Required for avatar upload)
# ===========================================
# Get these from: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ===========================================
# JWT CONFIGURATION (Optional - has defaults)
# ===========================================
JWT_SECRET=
JWT_EXP_SECONDS=3600
JWT_REFRESH_EXP_SECONDS=2592000

# ===========================================
# DATABASE CONFIGURATION (Optional - has defaults)
# ===========================================
MONGODB_URI=
MONGODB_DB=

# ===========================================
# REDIS CONFIGURATION (Optional - has defaults)
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ===========================================
# KAFKA CONFIGURATION (Optional - has defaults)
# ===========================================
KAFKA_BOOTSTRAP="kafka:9092"

# ===========================================
# SERVICE PORTS (Optional - has defaults)
# ===========================================
REST_API_PORT=8080
WEBSOCKET_PORT=8081



# BUILD_MODE = production